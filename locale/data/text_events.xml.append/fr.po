msgid "data/text_events.xml.append$//text[@name=\"text_HAVE_DEATH_VESTS2\"]"
msgstr "Vous avez déjà les Vestes du Crépuscule."

#: src-en/data/text_events.xml.append:99
msgid "data/text_events.xml.append$//text[@name=\"text_GET_DEATH_VESTS2\"]"
msgstr ""
"Internaliser les Vestes du Crépuscule...\n"
