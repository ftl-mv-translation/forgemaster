#: src-en/data/text_events.xml.append:102
msgid "data/text_events.xml.append$//text[@name=\"text_SCRAPPED_DEATH_VESTS2\"]"
msgstr "Vous avez déjà démantelé les Gilets du crépuscule."

#: src-en/data/text_events.xml.append:103
msgid "data/text_events.xml.append$//text[@name=\"text_SCRAP_DEATH_VESTS2\"]"
msgstr "Démanteler les Vestes du Crépuscule."

#: src-en/data/text_events.xml.append:104
msgid "data/text_events.xml.append$//text[@name=\"text_HAVE_UPG_DRONE_COOLDOWN\"]"
msgstr "Vous possédez déjà l'Amplificateur de Drone \"Kai\"."

#: src-en/data/text_events.xml.append:105
